<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                    <%= image_tag "images/img-01.png" %>
			</div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :path, html: {class: "login100-form validate-form"}) do |f| %>
                <span class="login100-form-title">
					Member Login
				</span>

                <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input100", placeholder:"E-mail" %>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                    <%= f.password_field :password, autocomplete: "current-password",class: "input100", placeholder: "Password" %>                
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                <% end -%>

                <div class="container-login100-form-btn">
                    <%= f.submit "Login", :class => "login100-form-btn" %>
                </div>

                <%= render "devise/shared/links" %>
            <% end %>
        </div>
    </div>
</div>

				




   
    
   
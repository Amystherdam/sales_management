<div class="content">
    <div class="container-fluid">
        <!-- your content here -->
        <h3>Detalhes da transação comercial</h3>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Serviço</h4>
                        <p class="card-category"> 9042860293586</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <th>
                                        Descrição do Produto
                                    </th>
                                    <th>
                                        Valor Unitário
                                    </th>
                                    <th>
                                        Quantidade
                                    </th>
                                    <th>
                                        Desconto
                                    </th>
                                    <th>
                                        Situação do Negócio
                                    </th>
                                </thead>
                                <tbody>
                                    <% @numero_servico.each do |num_serv|%>
                                        <tr>
                                            <td>
                                                <%= num_serv.product_description %>
                                            </td>
                                            <td>
                                                <%= num_serv.product_value %>
                                            </td>
                                            <td>
                                                <%= num_serv.product_quantity %>
                                            </td>
                                            <td>
                                                <%= num_serv.product_discount %>
                                            </td>
                                            <td>
                                                <%= num_serv.business_situation %>
                                            </td>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
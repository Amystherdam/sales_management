<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">O que houve nesse período</h4>
                        <p class="card-category"> Informações de contatos comerciais</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                    <th>
                                        Número do Serviço
                                    </th>
                                    <th>
                                        Empresa
                                    </th>
                                    <th>
                                        Possível Entrada
                                    </th>
                                    <th>
                                        Vendedor
                                    </th>
                                    <th>
                                        Tipo de Pagamento
                                    </th>
                                    <th>
                                        Veja
                                    </th>
                                </thead>
                                <tbody>
                                    <% @buscar_por_estado.each do |estado|%>
                                        <tr>
                                            <td>
                                                <%= estado.service_number %>
                                            </td>
                                            <td>
                                                <%= estado.client_name %>
                                            </td>
                                            <td class="text-primary">
                                                R$<%= estado.amount %>
                                            </td>
                                            <td>
                                                <%= estado.seller_name %>
                                            </td>
                                            <td>
                                                <%= estado.payment_type %>
                                            </td>
                                            <td>
                                                <%= link_to detalhes_path(estado.service_number) do  %> 
                                                    <p>Detalhes</p>
                                                <%end%>
                                            </td>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>